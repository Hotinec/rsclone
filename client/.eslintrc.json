{
  "env": {
      "browser": true,
      "es6": true,
      "node": true
  },
  "root": true,
   "parserOptions": {
    "parser": "@typescript-eslint/parser"
   },
  "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
   ],
    "linebreak-style": 0,
    "import/prefer-default-export": 0,
    "no-plusplus": 0,
    "no-underscore-dangle": 0,
    "@typescript-eslint/ban-ts-comment": "off"
  }
}
